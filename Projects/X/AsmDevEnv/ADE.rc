// Menus ------------------------------------------------------------------------------------------

MDIMENUINIT MENUEX DISCARDABLE
BEGIN
  POPUP "$00",          IDM_FILE,               MFT_STRING, MFS_ENABLED
  BEGIN
    MENUITEM "*|SB1|BMP_MENUSIDEBAR_1", 0,      MFT_STRING, MFS_ENABLED
    MENUITEM "02$01",   IDM_FILE_NEW,           MFT_STRING, MFS_ENABLED
    MENUITEM "02$02",   IDM_FILE_OPEN,          MFT_STRING, MFS_ENABLED
    MENUITEM "-$04",    1000,                   MFT_STRING, MFS_ENABLED
    MENUITEM "13$05",   IDM_FILE_SAVE_CTX,      MFT_STRING, MFS_ENABLED
    MENUITEM "14$06",   IDM_FILE_LOAD_CTX,      MFT_STRING, MFS_ENABLED
    MENUITEM "04$07",   IDM_FILE_SETUP,         MFT_STRING, MFS_ENABLED
    MENUITEM "05$08",   IDM_FILE_EXIT,          MFT_STRING, MFS_ENABLED
    MENUITEM "Break",   IDM_BREAK,              MFT_STRING, MFS_ENABLED
  END
  POPUP "$20",          IDM_EDIT,               MFT_STRING, MFS_ENABLED
  BEGIN
    MENUITEM "14$21",   IDM_EDIT_CUT,           MFT_STRING, MFS_ENABLED
    MENUITEM "15$22",   IDM_EDIT_COPY,          MFT_STRING, MFS_ENABLED
    MENUITEM "16$23",   IDM_EDIT_PASTE,         MFT_STRING, MFS_ENABLED
    MENUITEM "17$24",   IDM_EDIT_CLEAR,         MFT_STRING, MFS_ENABLED
    MENUITEM "$25",     IDM_EDIT_SELECTALL,     MFT_STRING, MFS_ENABLED
    MENUITEM "-|",      1002,                   MFT_STRING, MFS_ENABLED
    MENUITEM "20$26",   IDM_EDIT_FIND,          MFT_STRING, MFS_ENABLED
  END
  POPUP "$40",          IDM_LANGUAGE,           MFT_STRING, MFS_ENABLED
  BEGIN
    MENUITEM "o$41",    IDM_LANGUAGE_ENGLISH,   MFT_STRING, MFS_ENABLED | MFS_CHECKED
    MENUITEM "o$42",    IDM_LANGUAGE_GERMAN,    MFT_STRING, MFS_ENABLED
    MENUITEM "o$43",    IDM_LANGUAGE_SPANISH,   MFT_STRING, MFS_ENABLED
  END
  POPUP "$80",          IDM_HELP,               MFT_STRING, MFS_ENABLED
  BEGIN
    MENUITEM "11$81",   IDM_HELP_HELP,          MFT_STRING, MFS_ENABLED
    MENUITEM "12$82",   IDM_HELP_ABOUT,         MFT_STRING, MFS_ENABLED
  END
END

